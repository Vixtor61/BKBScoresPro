<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/matches_new" />
        <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
        <TextView style="@style/shadoweffect" android:layout_marginLeft="@dimen/margin_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/medium_big_text" android:textColor="@android:color/white" android:text="@string/recent_games"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_match_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        </FrameLayout>
</LinearLayout>