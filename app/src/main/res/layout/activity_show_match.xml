<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:id="@+id/rv_ln" xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              tools:context=".activities.ShowMatchActivity" xmlns:tools="http://schemas.android.com/tools">
    <TextView android:layout_marginLeft="@dimen/margin_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/date" android:textSize="@dimen/medium_text"/>

    <TextView android:layout_marginLeft="@dimen/margin_normal" android:id="@+id/date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="@dimen/medium_big_text"/>

    <LinearLayout  android:layout_weight="3" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp">
    <LinearLayout android:layout_margin="@dimen/margin_small" android:background="@color/white" android:id="@+id/match_team_a" android:layout_weight="1" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent">

        <TextView android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:gravity="center" android:layout_weight="0.2" android:id="@+id/result_a" android:layout_width="match_parent" android:text="@string/draw" android:textSize="@dimen/medium_text" android:layout_height="wrap_content"/>

        <TextView android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:gravity="center" android:layout_weight="0.4" android:id="@+id/tv_name_a_ac" android:layout_width="match_parent" android:text="@string/filler" android:textSize="@dimen/medium_big_text" android:layout_height="wrap_content"/>
        <TextView android:layout_weight="8" android:gravity="center" android:id="@+id/tv_score_a_ac" android:layout_width="match_parent" android:text="@string/filler" android:textSize="@dimen/text_big" android:layout_height="0dp"/>

    </LinearLayout>
    <LinearLayout android:layout_margin="@dimen/margin_small" android:background="@color/white" android:id="@+id/match_team_b" android:layout_weight="1" android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent">
        <TextView
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical" android:gravity="center"
                android:layout_weight="0.2" android:id="@+id/result_b" android:layout_width="match_parent" android:text="@string/draw" android:textSize="@dimen/medium_text" android:layout_height="wrap_content"/>

        <TextView android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:gravity="center" android:layout_weight="0.4" android:id="@+id/tv_name_b_ac" android:layout_width="match_parent" android:text="@string/filler" android:textSize="@dimen/medium_big_text" android:layout_height="wrap_content"/>
        <TextView  android:gravity="center" android:id="@+id/tv_score_b_ac" android:layout_width="match_parent" android:text="@string/filler" android:textSize="@dimen/text_big" android:layout_height="0dp" android:layout_weight="8"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>